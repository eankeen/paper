{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2017",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"jsxFactory": "h"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
